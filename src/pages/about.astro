---
import Layout from "../layouts/Layout.astro";
import CTA from "../components/CTA.astro";
---

<Layout title="Welcome to Astro.">
  <div class="bg-white flex flex-col items-center justify-center">
    <!-- Section Title -->
    <div class="w-full text-center bg-sky/5 p-20 mb-20">
      <h1 class="text-4xl font-bold text-gray-800">About Us</h1>
      <p class="mt-4 text-lg text-gray-600">
        Bridging continents with world-class trade services.
      </p>
    </div>
    <div class="flex flex-col justify-center items-center w-[1080px] gap-3">
      <div class="grid grid-cols-2 items-center mb-20 gap-4">
        <!-- Mission Statement -->
        <div class="mb-12">
          <h2 class="text-2xl font-semibold text-gray-700 mb-4">Our Mission</h2>
          <p class="text-gray-600">
            At <strong>IntercontinentalExim</strong>, we believe in bridging the
            gap between continents through world-class trade services. Our
            mission is to provide premium products that uphold the highest
            standards of quality, reliability, and sustainability.
          </p>
        </div>
        <div
          class="relative w-full h-full aspect-w-3 aspect-h-5 overflow-hidden"
        >
          <img src="src/assets/Img1.jpg" alt="Ship Dock" class="object-cover" />
        </div>
      </div>

      <!-- Specialization Section -->
      <div
        class="w-full h-full flex flex-col justify-center items-center gap-5 mb-20"
      >
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">
          What We Specialize In
        </h2>
        <div class="w-full flex gap-5">
          <div
            class="w-full border px-6 py-16 flex flex-col gap-5 rounded-[18px]"
          >
            <img
              src="src/assets/Cloud.png"
              alt="Cloud Image"
              width="82"
              height="82px"
            />
            <div class="">
              <h4 class="text-lg">IT Services</h4>
              <p class="text-gray-600">
                Tailored services for global enterprises.
              </p>
            </div>
          </div>
          <div
            class="w-full border px-6 py-16 flex flex-col gap-5 rounded-[18px]"
          >
            <img
              src="src/assets/ID.png"
              alt="Home Image"
              width="82"
              height="82px"
            />
            <div class="">
              <h4 class="text-lg">Interior Designing</h4>
              <p class="text-gray-600">Blending innovation and style.</p>
            </div>
          </div>
          <div
            class="w-full border px-6 py-16 flex flex-col gap-5 rounded-[18px]"
          >
            <img
              src="src/assets/tick.png"
              alt="tick Image"
              width="82"
              height="82px"
            />
            <div class="">
              <h4 class="text-lg">High-Quality Products</h4>
              <p class="text-gray-600">
                Supplying products from trusted partners
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <CTA />
  </div>
</Layout>
