---
import Layout from "../layouts/Layout.astro";
import CTA from "../components/CTA.astro";
import dock from "../assets/Img1.jpg";
import tick from "../assets/tick.png";
import design from "../assets/ID.png";
import { Image } from "astro:assets";
---

<Layout title="Welcome to Astro.">
  <div class="bg-white flex flex-col items-center justify-center">
    <!-- Section Title -->
    <div class="about_fades w-full text-center bg-sky/5 pt-32 p-20 mb-20">
      <h1 class="text-4xl font-bold text-gray-800">About Us</h1>
      <p class="mt-4 text-lg text-gray-600">
        Bridging continents with world-class trade services.
      </p>
    </div>
    <div class="flex flex-col justify-center items-center w-[1080px] gap-3">
      <div class="about_fades grid grid-cols-2 items-center mb-20 gap-4">
        <!-- Mission Statement -->
        <div class="mb-12">
          <h2 class="text-2xl font-semibold text-gray-700 mb-4">Our Mission</h2>
          <p class="text-gray-600">
            At <strong>IntercontinentalExim</strong>, we believe in bridging the
            gap between continents through world-class trade services. Our
            mission is to provide premium products that uphold the highest
            standards of quality, reliability, and sustainability.
          </p>
        </div>
        <div
          class="relative w-full h-full aspect-w-3 aspect-h-5 overflow-hidden"
        >
          <Image src={dock} alt="Ship Dock" class="object-cover" />
        </div>
      </div>

      <!-- Specialization Section -->
      <div
        class="w-full h-full flex flex-col justify-center items-center gap-5 mb-20"
      >
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">
          What We Specialize In
        </h2>
        <div class="w-full flex gap-5">
          <div
            class="about_slide w-full border px-12 py-10 flex flex-col justify-start rounded-[18px]"
          >
            <div class="text-ocean mb-12">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M14.25 9.75 16.5 12l-2.25 2.25m-4.5 0L7.5 12l2.25-2.25M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z"
                ></path>
              </svg>
            </div>

            <div class="">
              <h4 class="text-lg">IT Services</h4>
              <p class="text-gray-600">
                Tailored services for global enterprises.
              </p>
            </div>
          </div>
          <div
            class="about_slide w-full border px-12 py-10 flex flex-col justify-start rounded-[18px]"
          >
            <div class="text-ocean mb-12">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 21v-7.5a.75.75 0 0 1 .75-.75h3a.75.75 0 0 1 .75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349M3.75 21V9.349m0 0a3.001 3.001 0 0 0 3.75-.615A2.993 2.993 0 0 0 9.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 0 0 2.25 1.016c.896 0 1.7-.393 2.25-1.015a3.001 3.001 0 0 0 3.75.614m-16.5 0a3.004 3.004 0 0 1-.621-4.72l1.189-1.19A1.5 1.5 0 0 1 5.378 3h13.243a1.5 1.5 0 0 1 1.06.44l1.19 1.189a3 3 0 0 1-.621 4.72M6.75 18h3.75a.75.75 0 0 0 .75-.75V13.5a.75.75 0 0 0-.75-.75H6.75a.75.75 0 0 0-.75.75v3.75c0 .414.336.75.75.75Z"
                ></path>
              </svg>
            </div>
            <div class="">
              <h4 class="text-lg">Interior Designing</h4>
              <p class="text-gray-600">Blending innovation and style.</p>
            </div>
          </div>
          <div
            class="about_slide w-full border px-12 py-10 flex flex-col justify-start rounded-[18px]"
          >
            <div class="text-ocean mb-12">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-10"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z"
                ></path>
              </svg>
            </div>
            <div class="">
              <h4 class="text-lg">High-Quality Products</h4>
              <p class="text-gray-600">
                Supplying products from trusted partners
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <CTA />
  </div>
</Layout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);
  const elements = document.querySelectorAll(".about_fades");
  gsap.from(elements, {
    opacity: 0,
    y: 20,
    stagger: {
      each: 0.2,
    },
    scrollTrigger: {
      trigger: elements,
      toggleActions: "play pause resume reset",
      start: "top 80%",
    },
  });

  const card = document.querySelectorAll(".about_slide");
  gsap.from(card, {
    opacity: 0,
    x: -20,
    stagger: {
      each: 0.2,
    },
    scrollTrigger: {
      trigger: card,
      toggleActions: "play none none reset",
      start: "top 80%",
      once: false,
    },
  });
</script>
