---
import Layout from "../layouts/Layout.astro";
import tick from "../assets/tick.png";
import { Image } from "astro:assets";
---

<Layout title="Submission Success">
  <div
    class="flex items-center justify-center min-h-[calc(100vh_-_72px)] flex-col bg-[#F7F7F7]"
  >
    <Image src={tick} alt="Success Tick" class="w-24 h-24 mb-4" />
    <h1 class="text-xl font-semibold text-gray-800">
      Your response has been successfully submitted!
    </h1>
    <p class="text-gray-600 mt-2">
      Thank you for your feedback. We appreciate your input and will get back to
      you soon.
    </p>
  </div>
</Layout>
