---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <div class="flex flex-col justify-center items-center pt-0 py-20">
    <div class="w-full text-center bg-sky/5 pt-32 p-20 mb-20">
      <h1 class="product_fades text-4xl font-bold text-gray-800">
        Products And Services
      </h1>
      <p class="product_fades mt-4 text-lg text-gray-600">
        Explore our diverse product range, carefully selected to meet the
        highest international standards
      </p>
    </div>
    <div class="product_fades w-[1080px] grid grid-cols-2 gap-16">
      <Card />
    </div>
  </div>
</Layout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);
  const elements = document.querySelectorAll(".product_fades");
  gsap.from(elements, {
    opacity: 0,
    y: 20,
    stagger: {
      each: 0.2,
    },
    scrollTrigger: {
      trigger: elements,
      toggleActions: "play pause resume reset",
      start: "top 80%",
    },
  });
</script>
