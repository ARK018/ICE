<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);
  const element = document.querySelectorAll(".fadings");
  gsap.from(element, {
    opacity: 0,
    y: 20,
    stagger: {
      each: 0.2,
    },
    scrollTrigger: {
      trigger: element,
      toggleActions: "play pause resume reset",
      start: "top 90%",
    },
  });
</script>
