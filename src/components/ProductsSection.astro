---
import Card from "./Card.astro";
---

<div class="bg-white flex justify-center mt-32 py-20 border-t">
  <div class="grid grid-cols-2 w-[1080px] gap-20">
    <div class="h-full relative">
      <!-- Add height and relative positioning -->
      <div class="sticky top-40 flex flex-col gap-3">
        <!-- Add top property -->
        <p
          class="fading text-4xl text-[#131820] font-semibold leading-[110%] tracking-[-0.02em]"
        >
          Products And Services
        </p>
        <p class="fading text-[#131820] opacity-[50%] w-[420px]">
          Explore our diverse product range, carefully selected to meet the
          highest international standards
        </p>
        <a
          href="/products"
          class="fading w-fit mt-5 px-7 py-2 rounded-full border-2 border-[#131820] text-black cursor-pointer"
        >
          Learn More
        </a>
      </div>
    </div>
    <div class="fading flex flex-col gap-16">
      <Card />
    </div>
  </div>
</div>
<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);
  const elements = document.querySelectorAll(".fading");
  gsap.from(elements, {
    opacity: 0,
    y: 20,
    stagger: {
      each: 0.2,
    },
    scrollTrigger: {
      trigger: elements,
      toggleActions: "play pause resume reset",
      start: "top 80%",
    },
  });
</script>
